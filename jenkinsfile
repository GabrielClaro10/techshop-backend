pipeline {
    agent any
    stages {
        stage('Docker Login') {
            steps {
                script {
                    // Referencia as credenciais salvas
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USER', passwordVariable: 'PASSWORD')]) {
                        // Executa o comando de login
                        sh 'echo $PASSWORD | docker login -u $USER --password-stdin https://index.docker.io/v1/'
                    }
                }
            }
        }
    }
}
