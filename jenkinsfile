pipeline {
    agent any

    environment {
        REGISTRY_URL = 'docker.io'
        DOCKER_IMAGE_NAME = 'gabriel924/techshop'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Image') {
            steps {
                script {
                    dockerapp = docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_ID}", '--no-cache -f app/Dockerfile .')
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo 'Running tests...'
                    sh 'docker run --rm ${DOCKER_IMAGE_NAME}:${env.BUILD_ID} php artisan test'
                }
            }
        }

        stage('Push Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerid', usernameVariable: 'USER', passwordVariable: 'PASSWORD')]) {
                    script {
                        bat "docker login -u %USER% -p %PASSWORD% ${REGISTRY_URL}"

                        docker.withRegistry("https://${REGISTRY_URL}", "dockerid") {
                            dockerapp.push("latest")
                            dockerapp.push("${env.BUILD_ID}")
                        }
                    }
                }
            }
        }
    }
}
