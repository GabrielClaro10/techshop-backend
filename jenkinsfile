pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'techshop/webapp'
        DEPLOY_SERVER = 'user@your-server:/path/to/deploy'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/GabrielClaro10/TechShop.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'composer install --no-interaction'
                    sh 'npm install'
                    sh 'npm run production'
                }
            }
        }

        stage('Testes Unitários') {
            steps {
                script {
                    sh 'vendor/bin/phpunit --configuration phpunit.xml'
                }
            }
        }

        stage('Testes de Integração') {
            steps {
                script {
                    sh './vendor/bin/phpunit --configuration phpunit.integration.xml'
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh "scp -r . $DEPLOY_SERVER"
                    sshagent(['deploy-ssh-key']) {
                        sh "ssh $DEPLOY_SERVER 'cd /path/to/deploy && ./deploy.sh'"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executado com sucesso!'
        }

        failure {
            echo 'Pipeline falhou.'
        }
    }
}
